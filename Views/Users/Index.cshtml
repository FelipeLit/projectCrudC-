@{
    ViewData["Title"] = "Inicio";
}
<h1 class="d-flex justify-content-center align-center mb-5">Usuarios</h1>

<div class="row">
    <div class="col-md-4">
        <a class="btn btn-success mb-3" asp-controller="Users" asp-action="Create">Crear</a>
    </div>

    <div class="col-md-8 d-flex justify-content-end align-items-end">

        <form class="form-inline d-flex mb-3" asp-action="Index" asp-controller="Users" method="post">
            <input class="form-control mr-sm-2 me-2" type="text" placeholder="Buscar" name="Search">
            <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Buscar">
        </form>
    </div>
</div>
 
