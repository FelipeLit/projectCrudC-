<table class="table">
    <thead>
        <th scope="col">Id</td>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Email</th>
        <th scope="col">Fecha Nacimiento</th>
        <th scope="col">Acciones</th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.BirthDate</td>
            <td>
                <a class="btn btn-info" asp-route-id="@item.Id" asp-controller="Users" asp-action="Details">Detalles</a>
                <a class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                <a class="btn btn-primary" asp-controller="Users" asp-action="Update" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
    }
</table>